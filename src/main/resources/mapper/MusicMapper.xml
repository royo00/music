<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.music.mapper.MusicMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.music.entity.Music">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="music_name" property="musicName" jdbcType="VARCHAR"/>
        <result column="artist" property="artist" jdbcType="VARCHAR"/>
        <result column="album" property="album" jdbcType="VARCHAR"/>
        <result column="duration" property="duration" jdbcType="INTEGER"/>
        <result column="file_uuid" property="fileUuid" jdbcType="VARCHAR"/>
        <result column="file_path" property="filePath" jdbcType="VARCHAR"/>
        <result column="file_size" property="fileSize" jdbcType="BIGINT"/>
        <result column="cover_url" property="coverUrl" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="play_count" property="playCount" jdbcType="BIGINT"/>
        <result column="upload_user_id" property="uploadUserId" jdbcType="BIGINT"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, music_name, artist, album, duration, file_uuid, file_path, file_size,
        cover_url, status, description, play_count, upload_user_id, remark, create_time, update_time
    </sql>

    <!-- 插入音乐 -->
    <insert id="insert" parameterType="com.music.entity.Music" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_music (
            music_name, artist, album, duration, file_uuid, file_path, file_size,
            cover_url, status, description, play_count, upload_user_id, remark, create_time, update_time
        ) VALUES (
                     #{musicName}, #{artist}, #{album}, #{duration}, #{fileUuid}, #{filePath}, #{fileSize},
                     #{coverUrl}, #{status}, #{description}, #{playCount}, #{uploadUserId}, #{remark}, #{createTime}, #{updateTime}
                 )
    </insert>

    <!-- 更新音乐 -->
    <update id="update" parameterType="com.music.entity.Music">
        UPDATE t_music
        <set>
            <if test="musicName != null">music_name = #{musicName},</if>
            <if test="artist != null">artist = #{artist},</if>
            <if test="album != null">album = #{album},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="fileUuid != null">file_uuid = #{fileUuid},</if>
            <if test="filePath != null">file_path = #{filePath},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="description != null">description = #{description},</if>
            <if test="playCount != null">play_count = #{playCount},</if>
            <if test="uploadUserId != null">upload_user_id = #{uploadUserId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除音乐 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM t_music WHERE id = #{id}
    </delete>

    <!-- 根据ID查询音乐 -->
    <select id="findById" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_music
        WHERE id = #{id}
    </select>

    <!-- 根据状态查询音乐列表 -->
    <select id="findByStatus" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_music
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 搜索音乐 -->
    <select id="searchMusic" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_music
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (
                music_name LIKE CONCAT('%', #{keyword}, '%')
                OR artist LIKE CONCAT('%', #{keyword}, '%')
                OR album LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="musicName != null and musicName != ''">
                AND music_name LIKE CONCAT('%', #{musicName}, '%')
            </if>
            <if test="artist != null and artist != ''">
                AND artist LIKE CONCAT('%', #{artist}, '%')
            </if>
            <if test="album != null and album != ''">
                AND album LIKE CONCAT('%', #{album}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 根据上传用户ID查询音乐列表 -->
    <select id="findByUploadUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_music
        WHERE upload_user_id = #{uploadUserId}
        <if test="status != null">
            AND status = #{status}
        </if>
        ORDER BY create_time DESC
    </select>
    <!-- 管理员查询音乐列表 -->
    <select id="findByAdmin" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_music
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 更新播放次数 -->
    <update id="updatePlayCount">
        UPDATE t_music
        SET play_count = #{playCount}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 统计音乐数量 -->
    <select id="countMusic" resultType="long">
        SELECT COUNT(*)
        FROM t_music
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

</mapper>
